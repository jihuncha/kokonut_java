<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.3dp"
        android:layout_marginTop="1.7dp"
        android:text="0Kcal"
        android:textColor="@color/color_000000"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nutrient_item_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_camera_item_first"
        android:padding="5dp"
        android:text="탄"
        android:textColor="@color/color_ffffff"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/tv_nutrient_item_first_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nutrient_item_first_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="1.7dp"
        android:layout_marginRight="10dp"
        android:text="0g"
        android:textColor="@color/color_282828"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nutrient_item_first"
        app:layout_constraintRight_toLeftOf="@+id/tv_nutrient_item_second"
        app:layout_constraintTop_toTopOf="@+id/tv_nutrient_item_first" />

    <TextView
        android:id="@+id/tv_nutrient_item_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_camera_item_second"
        android:padding="5dp"
        android:text="단"
        android:textColor="@color/color_ffffff"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/tv_nutrient_item_second_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nutrient_item_second_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="1.7dp"
        android:layout_marginRight="10dp"
        android:text="0g"
        android:textColor="@color/color_282828"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nutrient_item_second"
        app:layout_constraintRight_toLeftOf="@+id/tv_nutrient_item_third"
        app:layout_constraintTop_toTopOf="@+id/tv_nutrient_item_second" />

    <TextView
        android:id="@+id/tv_nutrient_item_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_camera_item_third"
        android:padding="5dp"
        android:text="지"
        android:textColor="@color/color_ffffff"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/tv_nutrient_item_third_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nutrient_item_third_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="1.7dp"
        android:layout_marginRight="10dp"
        android:text="0g"
        android:textColor="@color/color_282828"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nutrient_item_third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_nutrient_item_third" />

    <RelativeLayout
        android:id="@+id/rl_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginTop="14.7dp"
        android:background="@drawable/circular_food_detail_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_calorie">

        <ImageView
            android:id="@+id/iv_food_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/icon_back"/>

        <ImageView
            android:id="@+id/iv_no_diet_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/background_nodiet_lunch" />

        <TextView
            android:id="@+id/tv_no_diet_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_no_diet_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/tv_no_diet_data_detail"
            android:textColor="@color/color_66141414"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8.7dp"
            android:background="@drawable/circular_camera_item_time"
            android:paddingLeft="11.3dp"
            android:paddingTop="8dp"
            android:paddingRight="11.7dp"
            android:paddingBottom="10dp"
            android:text="점심"
            android:textColor="@color/color_ffffff"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15.3dp"
            android:layout_marginBottom="14.7dp"
            android:src="@drawable/image_button_lunch" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>