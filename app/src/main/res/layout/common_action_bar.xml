<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/common_action_bar_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/action_bar_title"
            style="@style/common_action_bar_title"
            android:gravity="center_horizontal"
            tools:text="타이틀" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/common_action_bar_right_tv"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/action_bar_noti_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff9600"
            android:textSize="13dp"
            tools:text="193" />

        <TextView
            android:id="@+id/noti_cnt_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:textColor="@color/color_ff9600"
            android:textSize="10dp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_actionbar_left_btn"
        style="@style/common_action_bar_left_btn"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:text="편집" />

    <TextView
        android:id="@+id/common_action_bar_right_tv"
        style="@style/common_action_bar_right_tv"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="공지함" />
</RelativeLayout>