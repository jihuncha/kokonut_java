<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_element"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/circular_background_popup"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pic_title"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/camera_popup_title"
            android:textColor="@color/color_292929"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_take_pic"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/popup_btn_selector"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/camera_popup_capture"
            android:textColor="@color/color_00813d"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_choose_pic"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/popup_btn_selector"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/camera_popup_select"
            android:textColor="@color/color_00813d"
            android:textSize="17sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>